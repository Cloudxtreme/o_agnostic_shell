#!/usr/bin/env sh
#
# prints physical disks by name


# bsd

( geom disk list |
  grep "Geom name: " |
  awk '{ print $3; }' |
  grep --invert-match "cd"
) 2>/dev/null ||


# linux

( lsblk --all --noheadings --list --output NAME,TYPE |
  grep disk |
  awk '{ print $1; }' 
) 2>/dev/null ||


# macOS

( diskutil list 2>/dev/null | 
  grep ^/ 2>/dev/null | 
  grep "physical" 2>/dev/null |
  sed 's/\/dev\///g' 2>/dev/null | 
  awk '{ print $1; }'
) 2>/dev/null ||


exit 1 #fail

exit 0 #success
