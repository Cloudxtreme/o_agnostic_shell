#!/usr/bin/env sh
#
# requires `o_hostname_domain`
#
# exit code 1 if hostname is not a fqdn (exit code 2 on error)

( o_hostname_domain |
  grep --quiet "."
) &&
echo "$(o_hostname) is a fully qualified domain name (FQDN)." &&
exit 0 ||

echo "$(o_hostname) is not a fully qualified domain name (FQDN)."&& 
exit 1
